
# These attributes must be defined

ST:  10 * level {
    HP += level
}
DX:  20 * level {
    Basic Speed x4 += level
}
IQ:  20 * level {
    Will += level
    Per += level
}
HT:  10 * level {
    FP += level
}

HP: 2 * level
Will: 5 * level
Per: 5 * level
FP: 3 * level

Human: 0 {
    ST += 10
    DX += 10
    IQ += 10
    HT += 10
}

Basic Lift ST = ST
Basic Lift = (Basic Lift ST * Basic Lift ST) / 5
Basic Speed x4: 5 * level "Divide by 4 for actual Basic Speed in yards per second" {
    Basic Move += level / 4
}
Basic Move: 5 * level "in yards per second"
Size: 0 * level {
    ST.cost -= 10% * level
    HP.cost -= 10% * level
}


Damage ST = ST

# for dice roll values:
#   4 -> 1d
#   5 -> 1d + 1
#   6 -> 1d + 2
#   7 -> 2d - 1
#   8 -> 2d
#   ...
Thrust = IF ST<=40 THEN (ST - 5) / 2 ELSE IF ST<=60 THEN (ST + 5) * 2 / 5 ELSE IF ST<=70 THEN (ST + 5) * 2 / 5 + 1 ELSE (ST + 10) * 2 / 5
Swing = IF ST<=8 THEN (ST - 3) / 2 ELSE IF ST<=26 THEN ST - 6 ELSE IF ST<=40 THEN (ST + 15) / 2 ELSE IF ST<=55 THEN (ST + 25) * 2 / 5 + 1 ELSE (ST + 30) * 2 / 5
Dodge = Basic Move + 3
Fright Check = 2 * (level - Will)

# The below are the implicit defaults for skills.
# To add other defaults, use "default += ...".
# To replace the implicit defaults with other defaults, use "default = ...".
# To disallow any defaults, use "default = none"
# *: * E {
#     default = attribute - 4
# }
# *: * A {
#     default = attribute - 5
# }
# *: * H {
#     default = attribute - 6
# }


No Fine Manipulators: -30 {
    ST.cost -= 40%
    DX.cost -= 40%
}

Charisma: 5 * level {
    Fortune Telling += level
}

Damage Resistance: 5 * level {
    Focused Absorption: +80% "specific attribute or healing"
    Wild Absorption: +100% "any attribute per hit"
    Directional (Front): -40%
}

Combat Reflexes: 15 {
    "+6 to IQ rolls to wake up or to recover from surprise or mental stun"
    Dodge += 1
    Parry += 1
    Block += 1
    Fright Check += 2
    Fast Draw += 1
}

Enhanced Dodge: 15 {
    Dodge += 1
}

Fearlessness: 2 * level {
    Fright Check += level
}



Stealth: DX A
Physician: IQ H
First Aid: IQ E {
    default = Physician
}
Surgery: IQ V {
    default = First Aid - 12, Physician - 5, Physiology - 8, Veterinary - 5
}

Fast Draw: DX E {
    default = none
    category = true
}

Fast Draw (Dice) = Fast Draw

Invisibility Art: IQ V {
    default = none
    requires = Trained By A Master AND Hypnotism >= 14 AND Stealth >= 14
}

Strategy: IQ H {
    default += Intelligence Analysis - 6, Tactics - 6
}
Tactics: IQ H {
    default += Strategy - 6
}

Survival: Per A {
    category = true
}
Survival (Plain) = Survival

Singing: HT E
Swimming: HT E

Lifting: HT A {
    default = none
}

